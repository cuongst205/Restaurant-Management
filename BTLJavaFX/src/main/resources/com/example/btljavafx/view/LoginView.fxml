<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.btljavafx.controller.LoginController"
      alignment="CENTER" spacing="12" styleClass="light-bg">
    <Label text="Quản lý nhà hàng" styleClass="title"/>
    <Label text="Đăng nhập" styleClass="subtitle"/>
    <TextField fx:id="usernameField" promptText="Tên đăng nhập" prefWidth="300"/>
    <PasswordField fx:id="passwordField" promptText="Mật khẩu" prefWidth="300"/>
    <Button text="Đăng nhập" onAction="#handleLogin" styleClass="primary-btn" prefWidth="120"/>
    <Label fx:id="statusLabel" textFill="#d32f2f"/>
</VBox>
