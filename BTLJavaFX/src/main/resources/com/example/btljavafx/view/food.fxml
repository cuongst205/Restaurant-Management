<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.btljavafx.controller.FoodController" spacing="10">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="20">
        <!-- Bảng món ăn -->
        <VBox spacing="10">
            <TableView fx:id="tableFood" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                </columns>
            </TableView>
            <Button text="Add to Order" onAction="#addToOrder"/>
        </VBox>

        <!-- Bảng Order -->
        <VBox spacing="10">
            <TableView fx:id="tableOrder" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colOrderName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colOrderPrice" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="colOrderQuantity" text="Qty" prefWidth="50"/>
                    <TableColumn fx:id="colOrderTotal" text="Total" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox spacing="10">
                <Label text="Total:"/>
                <Label fx:id="lblTotal" text="0.0"/>
                <Button text="Save Order" onAction="#saveOrder"/>
            </HBox>

        </VBox>
    </HBox>

    <!-- HBox thêm/xóa món ăn -->
    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Name"/>
        <TextField fx:id="txtPrice" promptText="Price"/>
        <Button text="Add Food" onAction="#addFood"/>
        <Button text="Delete Selected" onAction="#deleteFood"/>
    </HBox>

</VBox>
