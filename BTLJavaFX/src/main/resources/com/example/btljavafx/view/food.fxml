<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.btljavafx.controller.FoodController" spacing="10" styleClass="light-bg">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <HBox spacing="20">
        <VBox spacing="10" prefWidth="300">
            <Label text="Chọn bàn (Click để chọn bàn và xem món đã chọn)" styleClass="subtitle"/>
            <GridPane fx:id="gridTables" hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                    <ColumnConstraints percentWidth="33"/>
                </columnConstraints>
            </GridPane>
            <HBox spacing="10">
                <Label text="Bàn hiện tại:"/>
                <Label fx:id="lblCurrentTable" text="-"/>
            </HBox>
        </VBox>

        <VBox spacing="10">
            <TableView fx:id="tableFood" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colPrice" text="Price" prefWidth="100"/>
                </columns>
            </TableView>
            <Button text="Thêm vào bàn hiện tại" onAction="#addToOrder" styleClass="primary-btn"/>
        </VBox>

        <VBox spacing="10">
            <TableView fx:id="tableOrder" prefHeight="400">
                <columns>
                    <TableColumn fx:id="colOrderName" text="Name" prefWidth="200"/>
                    <TableColumn fx:id="colOrderPrice" text="Price" prefWidth="100"/>
                    <TableColumn fx:id="colOrderQuantity" text="Qty" prefWidth="50"/>
                    <TableColumn fx:id="colOrderTotal" text="Total" prefWidth="100"/>
                </columns>
            </TableView>

            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Total:"/>
                <Label fx:id="lblTotal" text="0.0"/>
                <Button fx:id="btnPay" text="Thanh toán bàn" onAction="#saveOrder" styleClass="primary-btn"/>
            </HBox>

        </VBox>
    </HBox>

    <HBox spacing="10">
        <TextField fx:id="txtName" promptText="Name"/>
        <TextField fx:id="txtPrice" promptText="Price"/>
        <Button text="Add Food" onAction="#addFood"/>
        <Button text="Delete Selected" onAction="#deleteFood"/>
    </HBox>


</VBox>
